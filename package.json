{
  "name": "biddio",
  "version": "1.1.0",
  "description": "Semester project 2 - Auction house",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "watch": "npx tailwindcss -i ./src/css/input.css -o ./dist/output.css --watch",
    "docs": "jsdoc -c ./conf.json -r",
    "test": "npm run test-unit",
    "test-unit": "jest",
    "test-e2e": "cypress open",
    "test-e2e-cli": "cypress run"
  },
  "author": "Siri Høyås",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "cypress": "^10.7.0",
    "eslint": "^8.27.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest": "^27.1.6",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jsdoc": "^4.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.2.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.mjs": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "*.{js,css,md}": "prettier --write"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "resetMocks": false,
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  }
}
